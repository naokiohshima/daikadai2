<div class="container">
<div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
<h3>以下の内容で、送信する。</h3>
<%= form_for(@poem) do |f| %>
 <%= f.hidden_field :title %>
 <%= f.hidden_field :content %>
 <p>タイトル:<%= @poem.title %></p>
 <p>コメント:<%= @poem.content %></p>
 <%= f.submit "登録する", class: 'btn btn-primary btn-block' %>
<% end %>
<%= form_for(@post, url: new_post_path, method: 'get') do |f| %>
  <%= f.hidden_field :title %>
  <%= f.hidden_field :content %>
  <%= f.submit "もどる", name:'back', class: 'btn btn-primary btn-block' %>
<% end %>
</div>
</div>
